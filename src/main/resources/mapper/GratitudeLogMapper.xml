<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gratitude.gratitude_log.repository.GratitudeLogMapper">
    <insert id="insert" parameterType="gratitude.gratitude_log.domain.GratitudeLog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO gratitude_log(title, content)
        VALUES(#{title}, #{content})
    </insert>

    <select id="selectAll" parameterType="gratitude.gratitude_log.domain.GratitudeLog">
        SELECT id, title, "content", created_at
        FROM gratitude_log
        ORDER BY id DESC
    </select>
</mapper>